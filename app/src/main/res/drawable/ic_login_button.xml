<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid
                android:color="@color/login_elements_color"/>
            <stroke
                android:width="1dp"
                android:color="@color/login_elements_color"/>
            <corners
                android:radius="3dp"/>
            <padding
                android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp"/>
        </shape>

    </item>
    <item>
        <shape>
            <gradient
                android:angle="270"
                android:endColor="@color/login_button_end_color"
                android:startColor="@color/login_button_start_color"/>
            <stroke
                android:width="1dp"
                android:color="@color/login_button_end_color"/>
            <corners
                android:radius="3dp"/>
            <padding
                android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp"/>
        </shape>
    </item>
</selector>
